@model IEnumerable<Election_projectFor_me.Models.ElectionsAreas>

@{
    ViewBag.Title = "ElectionsAreas";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<head>
    <meta charset="utf-8">
    <title>Home</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:300,400,500,700">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <style>
        body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #f8f9fa;
        }

        h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            color: #343a40;
        }

        p {
            font-size: 18px;
            text-align: center;
            margin-bottom: 40px;
            color: #6c757d;
        }

        .table-container {
            margin-top: 20px;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #f8f9fa;
            color: #343a40;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<body>
    <div class="container">
        <h2>النتائج النهائية للقوائم المحلية</h2>
        <p>
            تعرض هذه الصفحة النتائج النهائية لانتخابات القوائم الحزبية، حيث يمكنك الاطلاع على توزيع المقاعد بين الأحزاب المختلفة بناءً على الأصوات التي حصلوا عليها. تقدم النتائج نظرة شاملة على الأداء الانتخابي لكل قائمة محلية وكيفية تأثيرها على التوازن السياسي في المرحلة المقبلة. استخدم هذه المعلومات لفهم كيفية تشكيل الحكومة وتوزيع القوى السياسية في البرلمان.
        </p>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>المحافظة</th>
                        <th>الدائرة الانتخابية</th>
                        <th>عدد الأصوات</th>
                        <th>الإجراء</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var totalVotes = item.NumberOfVotes + item.WhitePaperLocalElectionsCount;

                        <tr>
                            <td>@item.Governorate</td>
                            <td>@item.ElectionArea</td>
                            <td>@totalVotes صوت</td>
                            <td>
                                <a class="btn btn-primary" href="@Url.Action("ListOfCandidates", "Result", new { id = item.ElectionArea })">معرفة النتيجة</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>