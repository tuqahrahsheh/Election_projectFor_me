@model Election_projectFor_me.Models.GeneralListing

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    section.h-100.bg-dark {
        background-color: rgb(209 209 209) !important;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="h-100 bg-dark">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="~/assets/images/نواب.jpg"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height:500px;width100%" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase">نموذج تسجيل قائمة حزبية </h3>

                                    <div class="row">
                                        <div class="col-md-9 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
                                                @*@Html.LabelFor(m => m.Name, new { @class = "form-label" })*@
                                                <label>اسم القائمه</label>
                                            </div>

                                            <div class="form-group">

                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.img, new { type = "file", @class = "form-control " })
                                                    @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                                                </div>
                                                @*@Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label" })*@
                                                <label>تحميل صوره</label>

                                            </div>
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary btn-lg">التالي</button>

                                        </div>



                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
}
