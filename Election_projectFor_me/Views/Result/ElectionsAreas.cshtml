@model IEnumerable<Election_projectFor_me.Models.ElectionsAreas>

@{
    ViewBag.Title = "ElectionsAreas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8">
    <title>النتائج النهائية للقوائم المحلية</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">*@
    <style>


        h2 {
            font-family: 'Raleway', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }



        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background-color: #ffffff;
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: scale(1.03);
            }

        .card-category {
            font-size: 1.25rem;
            font-weight: bold;
            color: #007bff;
        }

        .card-description h2 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: #343a40;
        }

        .card-description p {
            font-size: 1rem;
            color: #6c757d;
        }

        .btn-primary {
            background-color: #ff3b3b;
            border: none;
   /*         border-radius: 50px;*/
            padding: 10px 20px;
            font-size: 1rem;
            transition: background-color 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .card img {
            border-radius: 15px 15px 0 0;
        }

        .wrapper-grey {
            background-color: #f8f9fa;
        }

        #p {
            font-size: 1.125rem;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="wrapper-grey">
        <div class="container text-center">
            <h2>النتائج النهائية للقوائم المحلية</h2>
            <p id="p">
                تعرض هذه الصفحة النتائج النهائية لانتخابات القوائم الحزبية، حيث يمكنك الاطلاع على توزيع المقاعد بين الأحزاب المختلفة بناءً على الأصوات التي حصلوا عليها. تقدم النتائج نظرة شاملة على الأداء الانتخابي لكل قائمة محلية وكيفية تأثيرها على التوازن السياسي في المرحلة المقبلة.
            </p>
            <br />

            <div class="row">
                @foreach (var item in Model)
                {
                    var totalVotes = item.NumberOfVotes + item.WhitePaperLocalElectionsCount;

                    <div class="col-xs-12 col-sm-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <img src="https://sawtalhaq.com/assets/2024-06-06/images/4_news_1717660495.jpeg" class="card-img-top" alt="Election Image">
                            <div class="card-body text-start">
                                <div class="card-category">@item.Governorate</div>
                                <div class="card-description mt-2">
                                    <h2>@item.ElectionArea</h2>
                                    <p>عدد الأصوات: @totalVotes صوت</p>
                                </div>
                            </div>
                            <div class="card-footer text-end bg-white border-top-0">
                                <a class="btn btn-primary" href="@Url.Action("ListOfCandidates", "Result", new { id = item.ElectionArea })">معرفة النتيجة</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>