@model Election_projectFor_me.Models.USER

@{
    ViewBag.Title = "LoginUser";
}
<style>
    .btn:not(:disabled):not(.disabled) {
        border: var(--bs-btn-border-width) solid #ff3b3b;
        border-radius: var(--bs-btn-border-radius);
        background-color: #ff3b3b;
        color: white
    }
    #NationalNumberInput::placeholder {
        color: #666666;
            opacity: 0.5; 
        }
    #EmailInput::placeholder {
        color: #666666; 
        opacity: 0.5; 
    }

    #PasswordInput::placeholder {
        color: #666666;
        opacity: 0.5;
    }
</style>
@using (Html.BeginForm("LoginUser", "USER", FormMethod.Post))
{
    <section class="bg-light p-3 p-md-4 p-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-xxl-11">
                    <div class="card border-light-subtle shadow-sm">
                        <div class="row g-0">
                            <div class="col-12 col-md-6">
                                <img class="loginimg" src="~/assets/images/Jordan/img5.jpg" alt="Illustration" style="max-width: 100%; height: auto;">
                            </div>
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">
                                                    <div class="text-center mb-4">
                                                        <a href="#!">
                                                           <img src="~/assets/images/Jordan/logo01-removebg-preview.png" alt="BootstrapBrain Logo" width="100px" height="100">
                                                        </a>
                                                    </div>
                                                    <h2 class="text-center">مرحبا بك في انتخب </h2>

                                                </div>
                                            </div>
                                        </div>
                                        
                                        <form action="#!">
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        @Html.TextBoxFor(model => model.NationalNumber, new
                                                        {
                                                            @class = "form-control",
                                                            placeholder = "الرقم الوطني",
                                                            required = "required",
                                                            id = "NationalNumberInput" // Unique ID
                                                        })   
                                                        @Html.ValidationMessageFor(model => model.NationalNumber, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        @Html.TextBoxFor(model => model.Email, new
                                                        {
     @class = "form-control",
     placeholder = "البريد الإلكتروني",
     required = "required",
     id = "EmailInput" // Unique ID for the Email field
 })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <div class="form-group">
                                                            @Html.PasswordFor(model => model.Password, new
                                                            {
                                                                @class = "form-control",
                                                                placeholder = "كلمة المرور",
                                                                required = "required",
                                                                id = "PasswordInput" // Unique ID for the Password field
                                                            })
                                                        </div>
                                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    
                                                </div>
                                                <div class="col-12 d-flex justify-content-center align-items-center">
                                                    <button type="submit" class="btn btn-register">تسجيل الدخول</button>
                                                </div>

                                            </div>
                                        </form>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-5">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}

