@model Election_projectFor_me.Models.Debate

@{
    ViewBag.Title = "Create";
}
<style>
    body {
        direction:rtl;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card bg-light text-center rounded p-5">
                    <div class="card-body">
                        <h1 class="mb-4">مناظرات</h1>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-horizontal">
                            <div class="form-group row">
                                @*@Html.LabelFor(model => model.DebateTitle, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <label class="control-label col-md-3">عنوان المناظرة</label>

                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.DebateTitle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DebateTitle, "", new { @class = "text-danger" })
                                </div>
                            </div><br /><br />
                                        <div class="form-group row">
                                            @*@Html.LabelFor(model => model.DebateDate, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                            <label class="control-label col-md-3">تاريخ المناظرة</label>

                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.DebateDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                @Html.ValidationMessageFor(model => model.DebateDate, "", new { @class = "text-danger" })
                                            </div>
                                        </div><br /><br />
                                        <div class="form-group row">
                                            @*@Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                            <label class="control-label col-md-3">الموقع</label>

                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                            </div>
                                        </div><br /><br />
                                        <div class="form-group row">
                                            @*@Html.LabelFor(model => model.Candidate1ID, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                            <label class="control-label col-md-3">الرقم الوطني للمرشح الاول</label>

                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.Candidate1ID, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Candidate1ID, "", new { @class = "text-danger" })
                                            </div>
                                        </div><br /><br />
                                        <div class="form-group row">
                                            @*@Html.LabelFor(model => model.Candidate2ID, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                            <label class="control-label col-md-3">الرقم الوطني للمرشح الثاني</label>

                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.Candidate2ID, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Candidate2ID, "", new { @class = "text-danger" })
                                            </div>
                                        </div><br /><br />
                            <div class="form-group row">
                                @*@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-3" })*@
                                <label class="control-label col-md-3">تفاصيل</label>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div><br /><br />
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <input type="submit" value="ارسال" class="btn btn-primary w-50 py-3" onclick="showDebateAlert()" />
                                </div>
                            </div><br /><br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center mt-4">
    @Html.ActionLink("الرجوع الى الصفحة السابقة", "Index")
</div>
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function showDebateAlert() {
            Swal.fire({
                title: 'نجاح',
                text: 'تم إرسال الطلب إلى المسؤول وبانتظار الرد.',
                icon: 'success',
                confirmButtonText: 'موافق'
            });
        }
    </script>
}
